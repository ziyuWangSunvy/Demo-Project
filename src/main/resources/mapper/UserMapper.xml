<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pokerfans.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.pokerfans.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
    </resultMap>

    <insert id="insert" parameterType="com.pokerfans.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, email)
        VALUES (#{username}, #{email})
    </insert>

    <select id="findById" resultMap="userResultMap">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="userResultMap">
        SELECT *
        FROM users
    </select>

    <update id="update" parameterType="com.pokerfans.entity.User">
        UPDATE users
        SET username = #{username},
            email    = #{email}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE
        FROM users
        WHERE id = #{id}
    </delete>

</mapper>
